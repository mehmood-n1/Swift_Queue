@model Swift_Queue_web.Models.Customer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@Html.Raw(ViewData["msg"])
<h2 class="text-center">Customer SignUp</h2>
<div class="container">
    <div class="jumbotron">
        @using (Html.BeginForm())
        {


            <div class="form-horizontal">
                <h4>Customer</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Customer Name</label>
                    <div class="col-md-10">
                        <input type="text" required class="form-control"  name="Customer_Name" />
                        @Html.ValidationMessageFor(model => model.Customer_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Customer Email</label>
                    <div class="col-md-10">
                        <input type="email" required class="form-control" name="Customer_Email" />
                        @Html.ValidationMessageFor(model => model.Customer_Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Customer Password</label>
                    <div class="col-md-10">
                        <input type="password" required class="form-control" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" name="Customer_password" />

                        @Html.ValidationMessageFor(model => model.Customer_password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Customer Phone</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="Customer_Phone" />

                        @Html.ValidationMessageFor(model => model.Customer_Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
